<div class="content">
  <div class="players">
    {{#each characters}}
    <a data-action="player" data-user-id="{{id}}" {{#if selected}} class="selected" {{/if}}>{{name}}</a>
    {{/each}}
  </div>
  <label>Message:</label>
  <textarea cols="50" rows="10" autofocus></textarea>
  <button data-action="whisper"><i class="fa-solid fa-envelope"></i> {{localize "PERMISSION.MessageWhisper"}}</button>
</div>
