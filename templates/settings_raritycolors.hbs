<form class="flexcol">
  <div class="form-group">
    <label>Uncommon</label>
    <div class="form-fields">
      <input type="color" value="{{uncommon}}" data-edit="uncommon">
      <input name="uncommon" type="text" value="{{uncommon}}">
    </div>
  </div>
  <div class="form-group">
    <label>Rare</label>
    <div class="form-fields">
      <input type="color" value="{{rare}}" data-edit="rare">
      <input name="rare" type="text" value="{{rare}}">
    </div>
  </div>
  <div class="form-group">
    <label>Very Rare</label>
    <div class="form-fields">
      <input type="color" value="{{veryRare}}" data-edit="veryRare">
      <input name="veryRare" type="text" value="{{veryRare}}">
    </div>
  </div>
  <div class="form-group">
    <label>Legendary</label>
    <div class="form-fields">
      <input type="color" value="{{legendary}}" data-edit="legendary">
      <input name="legendary" type="text" value="{{legendary}}">
    </div>
  </div>
  <div class="form-group">
    <label>Artifact</label>
    <div class="form-fields">
      <input type="color" value="{{artifact}}" data-edit="artifact">
      <input name="artifact" type="text" value="{{artifact}}">
    </div>
  </div>
  <div>
    <hr>
  </div>

  <header>
    <button type="submit" name="submit">
      <i class="fa-solid fa-save"></i> Save Settings
    </button>
  </header>
</form>
